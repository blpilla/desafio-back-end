<p id="notice"><%= notice %></p>

<h1>Cadastros por Loja</h1>
<br>
<div class="table-responsive container-fluid">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Tipo</th>
        <th scope="col">Data</th>
        <th scope="col">Valor</th>
        <th scope="col">Cpf</th>
        <th scope="col">Cart√£o</th>
        <th scope="col">Hora</th>
        <th scope="col">Dono</th>
        <th scope="col">Loja</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @cnabs.each do |cnab| %>
        <tr>
          <td><%= cnab.tipoView %></td>
          <td><%= cnab.dataViewPt %></td>
          <td><%= cnab.valorView %></td>
          <td><%= cnab.cpf %></td>
          <td><%= cnab.cartao %></td>
          <td><%= cnab.horaView %></td>
          <td><%= cnab.dono %></td>
          <td style="font-weight:bold"><%= cnab.loja %></td>
          <td><%= link_to 'Editar', edit_cnab_path(cnab) %></td>
          <td><%= link_to 'Deletar', cnab, method: :delete, data: { confirm: 'Confirma deletar?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

